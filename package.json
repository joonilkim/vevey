{
  "name": "vevey",
  "version": "0.0.0",
  "repository": "https://github.com/joonilkim/vevey.git",
  "author": {
    "name": "Joonil Kim",
    "email": "somewehr@gmail.com"
  },
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "test:route": "cd pkg/route && yarn run test",
    "test:api": "cd pkg/api && yarn run test",
    "test": "run-p test:*"
  },
  "engines": {
    "node": ">=8.0.0 <9.0.0"
  },
  "workspaces": {
    "packages": [
      "pkg/*"
    ],
    "nohoist": [
      "**/route/**",
      "**/web/**",
      "**/api/**"
    ]
  },
  "// 1": "Put language specific dependencies here",
  "devDependencies": {
    "@ts-tools/node": "^0.9.0",
    "@types/aws-lambda": "^8.10.17",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.3.0-rc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "tslint --fix",
      "git add"
    ]
  }
}
