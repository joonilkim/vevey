{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "*": [
        "src/types"
      ]
    },
    "resolveJsonModule": true,
    "sourceMap": false,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true
  }
}
